{
  "name": "mern-monorepo",
  "private": true,
  "workspaces": ["server", "client"],
  "scripts": {
    "install-all": "npm install --workspaces",
    "start:server": "npm --workspace server start",
    "start:client": "npm --workspace client start",
    "dev": "concurrently \"npm --workspace server run dev\" \"npm --workspace client start\""
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}
